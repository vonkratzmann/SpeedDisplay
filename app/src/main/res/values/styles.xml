<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/Red</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Impacts action bar text colour-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark"/>
    <!-- impacts popups such as menus-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="LargeTextView" parent="AppTheme">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">@color/Red</item>
    </style>

    <style name="MediumTextView" parent="AppTheme">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">@color/Red</item>
    </style>

    <style name="SmallTextView" parent="AppTheme">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/Red</item>

    </style>

</resources>
