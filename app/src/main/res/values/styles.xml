<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Impacts action bar text colour-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <!-- impacts popups such as menus-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="LargeTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:layout_marginBottom">@dimen/large_margin_bottom</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="MediumTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:padding">@dimen/medium_padding</item>
        <item name="android:layout_marginBottom">@dimen/medium_margin_bottom</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>
    </style>



    <style name="SmallTextView" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:layout_marginBottom">@dimen/small_margin_bottom</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/White</item>

    </style>

    <style name="maxspeed" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@layout/rounded_border_tv</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
